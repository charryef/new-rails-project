<%= form_tag charges_path do %>
  <br>
  <% if current_user.role === 'standard' %>
    <p>Your current membership level is: <%= current_user.role %></p>
    <h3>Upgrade to <strong>Premium</strong></h3>
    <p>Create private wikis for $15 per month only</p>
    <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="<%= @stripe_btn_data[:key] %>" data-amount="<%= @stripe_btn_data[:amount] %>" data-description="<%= @stripe_btn_data[:description] %>" ></script>
  <% elsif current_user.role === 'premium' %>
    <%= link_to "Downgrade account", charges_downgrade_path, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to downgrade to standard account? Your private wikis will become visible to public.'} %>
  <% end %>

<% end %>
